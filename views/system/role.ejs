<%- include ../header %>

<%- include ../body %>  
<div class="content-box"><!-- Start Content Box -->

    <div class="content-box-header">
        <h3>用户信息</h3>
        <ul class="content-box-tabs">

            <li><a  class="button" href="/roleAdd" >添加权限</a></li> <!-- href must be unique and match the id of target div -->
        </ul>
        <div class="clear"></div>
    </div> <!-- End .content-box-header -->
    <div class="content-box-content">
        <table>
            <thead>
                <tr>
                    <th>名称</th>
                    <th>创建时间</th>
                    <th>创建用户</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <div class="pagination">
                            

                            
                               
                             <% if( role.currentPage >1  ){%>
                            <a class="number current" href=<%= '/role?p=1'%> >首页</a>
                            <a class="number current" href=<%= '/role?p=' + (role.currentPage-1)  %> >前一页</a>
                            <% } %>


                            第<%= role.currentPage  %>页 (共 <%= role.pageCount %> 页）



                            <% if( role.pageCount > role.currentPage){ %>
                            <a class="number current" href=<%= '/role?p=' + (role.currentPage+1) %> >下一页</a>
                            <a class="number current" href=<%= '/role?p=' + role.pageCount %>  > 尾页</a>
                            <% } %>
                            

                        </div> <!-- End .pagination -->
                        <div class="clear"></div>
                    </td>
                </tr>
            </tfoot>
            <tbody>

                <%  for(var i=0;i<role.results.length;i++){ %>
                <tr>
                    <td><%= role.results[i].text %></td>
                    <td><%= role.results[i].createTime %></td>
                    <td><%= role.results[i].createUser %></td>

                    <td>
                        <!-- Icons -->
                        <a href="/roleEdit?id=<%=role.results[i].id %>" title="编辑"><img src="images/icons/pencil.png" alt="编辑" /></a>
                        <a href="/roleDelete?id=<%=role.results[i].id %>" title="删除"><img src="images/icons/cross.png" alt="删除" /></a> 
                    </td></tr>
                <% } %>




                </tbodu>
        </table>
    </div>
</div> <!-- End .content-box-content -->

<%- include ../footer %>