<%- include ../header %>
<%- include ../body %>  
<div class="content-box"><!-- Start Content Box -->

    <div class="content-box-header">
        <h3>用户信息</h3>
        <ul class="content-box-tabs">

            <li><a href="#" class="button" id="create-role" >添加权限</a></li> <!-- href must be unique and match the id of target div -->
        </ul>
        <div class="clear"></div>
    </div> <!-- End .content-box-header -->
    <div class="content-box-content">
        <table>

            <thead>
                <tr>
                    <th>名称</th>
                    <th>创建时间</th>
                    <th>创建用户</th>
                    <th>操作</th>

                </tr>

            </thead>

            <tfoot>
                <tr>
                    <td colspan="6">

                        <div class="pagination">


                            <%  var currtentPage = role.currentPage ; %>
                            <% if( currtentPage>2  ){%>
                            <a href=<%= '/role?p=1'%> >&laquo; 首页</a>
                            <a href=<%= '/role?p=' + currentPage-1  %> >&laquo; 前一页</a>
                            <% } %>

                            <% for(var i = 3 ; i>0; i-- ){
                            if((currtentPage-i)>0){
                            %>
                            <a href="#" class="number" ><%= currtentPage-i %></a>
                            <% }
                            } %>
                            <a href="#" class="number current"><%= currtentPage %></a>


                            <% for(var i = 1 ; i<4; i++){
                            if(currtentPage+i< role.pageCount){
                            %>
                            <a href="#" class="number" ><%= currtentPage+i %></a>
                            <% }
                            } %>
                            <% if( (role.pageCount - role.currentPage)>3){ %>
                            <a href=<%= '/role?p=' + role.currentPage+1 %> >下一页 &raquo;</a>
                            <a href=<%= '/role?p=' + role.pageCount %>  > 尾页 &raquo;</a>
                            <% } %>


                        </div> <!-- End .pagination -->
                        <div class="clear"></div>
                    </td>
                </tr>
            </tfoot>
            <tbody>

                <%  for(var i=0;i<role.results.length;i++){ %>
                <tr>
                    <td><%= role.results[i].name %></td>
                    <td><%= role.results[i].createTime %></td>
                     <td><%= role.results[i].createUser %></td>
                    
                    <td>
                        <!-- Icons -->
                        <a href="/userEdit?" title="编辑"><img src="images/icons/pencil.png" alt="编辑" /></a>
                        <a href="/userdelete?" title="删除"><img src="images/icons/cross.png" alt="删除" /></a> 
                    </td></tr>
                <% } %>




                </tbodu>
        </table>
    </div> <!-- End .content-box-content -->
<%- include ../footer %>